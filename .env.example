# Backend (Flask honeypot server)
HONEYPOT_DB_PATH=./honeypot.db        # SQLite database file path
HONEYPOT_HOST=0.0.0.0                  # Server listen address
HONEYPOT_PORT=5000                     # Server listen port
HONEYPOT_DEBUG=false                   # Enable Flask debug mode
HONEYPOT_SESSION_TTL=3600              # Session time-to-live in seconds
DASHBOARD_API_KEY=                     # API key for dashboard auth (empty = no auth)
DASHBOARD_CORS_ORIGIN=http://localhost:3000  # Allowed CORS origin for dashboard
MCP_RATE_LIMIT=60                      # Max MCP requests per window
MCP_RATE_WINDOW=60                     # Rate limit window in seconds

# Frontend (Next.js dashboard)
NEXT_PUBLIC_API_URL=http://localhost:5000  # Backend API base URL
